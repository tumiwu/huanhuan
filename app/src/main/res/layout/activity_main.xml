<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.a50067.huanhuan.View.MainActivity">

    <include layout="@layout/toolbar_layout"/>


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <Button
    android:id="@+id/main_frag_btn"
    android:layout_width="0dp"
    android:layout_height="48dp"
    android:layout_weight="1"
    android:textSize="15dp"
    android:text="主页"
    android:background="@drawable/main_tab_btn_bg_selector"
    android:textColor="@color/main_tab_btn_selector_textcolor"
    android:enabled="false"
    />
    <Button
    android:id="@+id/chat_frag_btn"
    android:layout_width="0dp"
    android:layout_height="48dp"
    android:layout_weight="1"
    android:textSize="15dp"
    android:text="对话"
    android:background="@drawable/main_tab_btn_bg_selector"
    android:textColor="@color/main_tab_btn_selector_textcolor"
    android:enabled="true"
    />
    <Button
    android:id="@+id/star_frag_btn"
    android:layout_width="0dp"
    android:layout_height="48dp"
    android:layout_weight="1"
    android:textSize="15dp"
    android:text="收藏"
    android:background="@drawable/main_tab_btn_bg_selector"
    android:textColor="@color/main_tab_btn_selector_textcolor"
    android:enabled="true"
    />
    <Button
    android:id="@+id/personnal_frag_btn"
    android:layout_width="0dp"
    android:layout_height="48dp"
    android:layout_weight="1"
    android:textSize="15dp"
    android:text="个人"
    android:background="@drawable/main_tab_btn_bg_selector"
    android:textColor="@color/main_tab_btn_selector_textcolor"
    android:enabled="true"
    />
    </LinearLayout>

    <com.example.a50067.huanhuan.Utility.MyNoSlideViewpager
        android:id="@+id/main_ViewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></com.example.a50067.huanhuan.Utility.MyNoSlideViewpager>
    <!--<ScrollView-->
        <!--android:id="@+id/mainAC_parent_scrollView"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent">-->

    <!--</ScrollView>-->
</LinearLayout>

